<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        tools:context=".intership.CgpaActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- CGPA System Selection -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose Grading System"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_10point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10-Point System"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/rb_4point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4-Point System"/>
            </RadioGroup>

            <!-- CGPA Input -->
            <EditText
                android:id="@+id/et_cgpa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Your Current CGPA"
                android:inputType="numberDecimal"
                android:minHeight="48dp"
                android:padding="10dp" />

            <Button
                android:id="@+id/btn_convert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Convert to Percentage"
                />

            <TextView
                android:id="@+id/tv_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Result: "
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingTop="10dp"/>

            <!-- Semester-wise CGPA Input -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter CGPA for Each Semester"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingTop="20dp"/>

            <EditText
                android:id="@+id/et_semesters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter CGPA for each semester separated by commas"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="10dp" />

            <Button
                android:id="@+id/btn_calculate_average"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculate Average CGPA"
                />

            <TextView
                android:id="@+id/tv_average_cgpa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Average CGPA: "
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingTop="10dp"/>

            <!-- Suggestion for 8.5 CGPA -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Want to reach 8.5 CGPA? We can suggest the required SGPA."
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingTop="20dp"/>

            <Button
                android:id="@+id/btn_sgpa_suggestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Suggest SGPA to Reach 8.5 CGPA"/>

            <TextView
                android:id="@+id/tv_sgpa_suggestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Required SGPA: "
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingTop="10dp"/>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/cgpaChart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="20dp"/>


        </LinearLayout>
    </ScrollView>


